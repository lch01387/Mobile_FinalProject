<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/today_date"
        android:text="오늘날자 표시" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 현재 위치는?"
        android:id="@+id/bt_map"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 로그 만들기"
        android:id="@+id/bt_create"
        android:layout_below="@+id/today_date"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/editText"
        android:layout_below="@+id/bt_create"
        android:text="로그 목록" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_toEndOf="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/bt_map" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로고침"
        android:id="@+id/bt_renew"
        android:layout_below="@+id/today_date"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
